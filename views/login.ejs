  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Replit Login</title>
  <link href="style.css" rel="stylesheet" type="text/css" />
  <style>
    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Arial', sans-serif;
      background: linear-gradient(to bottom, #175d69 23%, #330c43 95%);
      color: #fff;
    }

    .container {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      text-align: center;
    }

    .login-form {
      background-color: rgba(255, 255, 255, 0.9);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .hed {
      color: #175d69;
    }

    label {
      margin-top: 10px;
    }

    input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      box-sizing: border-box;
    }

    button {
      background-color: #175d69;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 15px;
    }

    button:hover {
      background-color: #0f3a49;
    }

    p {
      color: #ff0000; /* red for error message */
      margin-top: 10px;
    }
    .text{
      color:black;
    }
  </style>
</head>

<body>
  <button id='back'><a href='https://ad034146-ec9d-4d46-8356-9b12a6251919-00-89xkrbdzs3cx.worf.replit.dev/'>Go Back</a></button>
  <div id="section3" class="container">
    <form class="login-form" action='/login' method='POST'>
      <div class="d-flex flex-column">
        <h2 class="hed">Login</h2>
        <div class="d-flex flex-column text">
          <label for="username">Email:
            <input type="email" id="username" name="username" required>
          </label>

          <label for="password">Password:
            <input type="password" id="password" name="password" required>
          </label>
          <p><%= wrong %></p>
          <button type="submit">Login</button>
        </div>
      </div>
    </form>
  </div>
</body>

</html>
